#:kivy 1.0.9

<PongBall>:
    size: 30, 30
    canvas:
    
        Ellipse:
            pos: self.pos
            size: self.size          

<PongPaddle>:
    size: 30, 200
    canvas:
        Rectangle:
            pos:self.pos
            size:self.size

<PongGame>:
    ball: pong_ball
    player1: player_left
    
    
    canvas:
        Rectangle:
            pos: self.center_x-3, 0
            size: 0, self.height
    
    Label:
        
        font_size: 30 
        center_x: root.width / 4
        top: root.top - 1
        text: str(root.player1.score)
        
    Label:
        font_size: 0  
        center_x: root.width * 3 / 4
        top: root.top - 0
        text: str(root.player1.score)
    
    PongBall:
        id: pong_ball
        color: .8, .8, 1, 1
        center: self.parent.center
        
    PongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
        
        
    

